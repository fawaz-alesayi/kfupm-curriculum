<!-- partials/header.ejs-->
<header class='header' id='myHeader'>
    <!--Sticky Header with Home Text, Search Bar, About & Help -->
    <span class='header-text' onmouseover="changeColorH(this)" onmouseout="changeColorH(this)"><a
            href="/index.html">KFUPM Curriculum</a></span>
    <div class="search-group">
        <input type='search' class='search-bar' placeholder="Search for a course..."
            onkeyup="searchCourses(this.value)">
        <div class="result-group">
        </div>
    </div>
    <nav class='nav-group'>
        <span onmouseover="changeColorH(this)" onmouseout="changeColorH(this)"><a
                href="/about.html">About</a></span>
        <span onmouseover="changeColorH(this)" onmouseout="changeColorH(this)"><a href="/help.html">Help</a></span>
    </nav>
    <a class="icon" onclick="toggleNav()">
        <div class="menu-btn">
            <div class="menu-btn__burger"></div>
        </div>
    </a>
</header>